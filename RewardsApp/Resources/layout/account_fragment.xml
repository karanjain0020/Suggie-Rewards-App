<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <TextView
        android:text="Welcome User"
        android:textSize="25dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="SweetBucks: 99"
        android:textSize="20.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Total All Time: 500"
        android:textSize="20.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Rewards History:"
        android:textSize="20.0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="BOGO IceCream"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="50 swb"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
            android:textColor="@android:color/black"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="1/2 Off Candy"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="25 swb"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:textColor="@android:color/black"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="1/2 Price Milkshake"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="40 swb"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:textColor="@android:color/black"/>
        </TableRow>
    </TableLayout>

    <Button
        android:text="Change Account Info"
        android:layout_width="200.0dp"
        android:layout_height="60.0dp"
        android:id="@+id/ChangeAccountInfoButton"
        android:layout_gravity="center"/>


</LinearLayout>